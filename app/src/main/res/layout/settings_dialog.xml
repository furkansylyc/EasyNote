<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/cropped"
    android:padding="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/menu_settings"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:fontFamily="@font/bold"
        android:gravity="center"
        android:layout_marginBottom="20dp" />

    <LinearLayout
        android:id="@+id/backgroundOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="@drawable/menu_item_background"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_background"
            android:layout_marginEnd="16dp"
            android:contentDescription="Background" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/menu_background"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/regular" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_arrow_right"
            android:contentDescription="Arrow" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/notificationOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="@drawable/menu_item_background"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/alarm"
            android:layout_marginEnd="16dp"
            android:contentDescription="Notifications" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/notification_settings"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/regular" />

        <Switch
            android:id="@+id/notificationSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Notification Toggle" />

    </LinearLayout>

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/logout"
        android:background="@drawable/delete_button"
        android:textColor="@color/black"
        android:fontFamily="@font/regular"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/deleteAccountButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/delete_account_menu"
        android:background="@drawable/delete_button"
        android:textColor="@color/black"
        android:fontFamily="@font/regular"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/closeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kapat"
        android:background="@drawable/yes_button"
        android:textColor="@color/black"
        android:fontFamily="@font/regular"
        android:layout_marginTop="10dp" />

</LinearLayout> 